pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                script {
                    echo 'Stage 1: Building the code...'
                    echo 'Tool: Maven'
                }
            }
        }
        
        stage('Unit and Integration Tests') {
            steps {
                script {
                    echo 'Stage 2: Running Unit and Integration Tests...'
                    echo 'Tool: JUnit for Unit Tests, TestNG for Integration Tests'
                }
            }
            post {
                always {
                    emailext attachLog: true,
                             to: "angelo.mouzouris@gmail.com",
                             subject: "Unit and Integration Tests - Result",
                             body: "The stage has completed with status: ${currentBuild.currentResult}."
                }
            }
        }

        stage('Code Analysis') {
            steps {
                script {
                    echo 'Stage 3: Analyzing Code...'
                    echo 'Tool: SonarQube'
                }
            }
        }

        stage('Security Scan') {
            steps {
                script {
                    echo 'Stage 4: Performing Security Scan...'
                    echo 'Tool: OWASP Dependency-Check'
                }
            }
            post {
                always {
                    emailext attachLog: true,
                             to: "angelo.mouzouris@gmail.com",
                             subject: "Security Scan - Result",
                             body: "The stage has completed with status: ${currentBuild.currentResult}."
                }
            }
        }

        stage('Deploy to Staging') {
            steps {
                script {
                    echo 'Stage 5: Deploying to Staging...'
                    echo 'Tool: AWS CLI for deploying to an AWS EC2 instance'
                }
            }
        }

        stage('Integration Tests on Staging') {
            steps {
                script {
                    echo 'Stage 6: Running Integration Tests on Staging...'
                    echo 'Tool: Selenium'
                }
            }
        }

        stage('Deploy to Production') {
            steps {
                script {
                    echo 'Stage 7: Deploying to Production...'
                    echo 'Tool: AWS CLI for deploying to an AWS EC2 instance'
                }
            }
        }
    }
    
    post {
        always {
            echo 'This will always run after all stages.'
        }
        success {
            emailext to: "angelo.mouzouris@gmail.com",
                     subject: "Pipeline Success",
                     body: "The pipeline completed successfully."
        }
        failure {
            emailext to: "angelo.mouzouris@gmail.com",
                     subject: "Pipeline Failure",
                     body: "The pipeline failed."
        }
    }
}
